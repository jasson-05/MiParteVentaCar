@model MiParteVentaCar.AppWebMVC.Models.Auto

@{
    ViewData["Title"] = "Editar detalles del Auto";
}

<h1 class="text-center mb-4" style="color: #333;">Detalles del Auto</h1>

<div class="container">
    <div class="card shadow-lg">
        <div class="row g-0">
            <div class="col-md-6 p-4 d-flex justify-content-center align-items-center" style="background-color: #f8f9fa;">
                <div class="image-container" style="text-align: center;">
                    @if (!string.IsNullOrWhiteSpace(Model.Urlimagen))
                    {
                        <img src="@Model.Urlimagen" alt="@Model.Modelo" class="img-fluid rounded" style="max-height: 400px; object-fit: contain;">
                    }
                    else
                    {
                        <p class="text-muted">No hay imagen disponible.</p>
                    }
                </div>
            </div>
            <div class="col-md-6">
                <div class="card-body p-4">
                    <h1 class="card-title mb-3" style="color: #007bff;">@Model.Modelo (@Model.AnnoFabricacion)</h1>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong style="color: #555;">Marca:</strong>
                            <span class="text-muted">@Model.IdMarcaNavigation?.Marca1</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong style="color: #555;">Departamento:</strong>
                            <span class="text-muted">@Model.IdDepartamentoNavigation?.Departamento1</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong style="color: #555;">Descripción:</strong>
                            <span class="text-muted">@Model.DescripcionA</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong style="color: #555;">Kilometraje:</strong>
                            <span class="text-muted">@Model.Kilometraje</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong style="color: #555;">Estado:</strong>
                            <span class="text-muted">@Model.Estado</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong style="color: #555;">Precio:</strong>
                            <span class="text-muted">@Model.Precio</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong style="color: #555;">Fecha de Registro:</strong>
                            <span class="text-muted">@Model.Urt</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong style="color: #555;">Fecha de Reparación:</strong>
                            <span class="text-muted">@Model.FechaRp?.ToShortDateString()</span>
                        </li>
                        @*  <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong style="color: #555;">Actividad:</strong>
                            <span class="text-muted">
                                @if (Model.Actividad == 1)
                                {
                                    <span>Activo</span>
                                }
                                else if (Model.Actividad == 2)
                                {
                                    <span>Inactivo</span>
                                }
                            </span>
                        </li>*@
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong style="color: #555;">Comentario:</strong>
                            <span class="text-muted">@Model.Comentario</span>
                        </li>
                        <li class="list-group-item">
                            <h6 class="mt-3 mb-2" style="color: #555;">Datos del Vendedor</h6>
                            <ul class="list-unstyled">
                                <li><strong>Nombre:</strong> @Model.IdVendedorNavigation?.Nombre</li>
                                <li><strong>Apellido:</strong> @Model.IdVendedorNavigation?.Apellido</li>
                                <li><strong>Dirección:</strong> @Model.IdVendedorNavigation?.Direccion</li>
                                <li><strong>Teléfono:</strong> @Model.IdVendedorNavigation?.Telefono</li>
                            </ul>
                        </li>
                    </ul>
                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">Regresar a la Lista</a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Editar</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Eliminar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .list-group-item {
        padding: 0.75rem 1rem;
        border-left: none;
        border-right: none;
    }

        .list-group-item:first-child {
            border-top: none;
        }

        .list-group-item:last-child {
            border-bottom: none;
        }

    .btn-outline-secondary {
        color: #6c757d;
        border-color: #6c757d;
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: white;
            border-color: #6c757d;
        }
</style>